<Application x:Class="WpfAppSample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppSample"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="ColorSchema-Text-RegularBackground">Red</Color>

        <SolidColorBrush x:Key="StackPanelRegularBackground" x:Shared="True"
                         Color="{DynamicResource ColorSchema-Text-RegularBackground}" />

        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="Background" Value="{DynamicResource StackPanelRegularBackground}" />
        </Style>

    </Application.Resources>
</Application>
